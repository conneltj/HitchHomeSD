<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        >

    </include>

    <RelativeLayout
        android:layout_width="174dp"
        android:layout_height="110dp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/ic_account_box_black_48dp"
        android:layout_weight="0.91">

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="319dp">

        <view
            class="com.rengwuxian.materialedittext.MaterialEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEmail"
            android:textColor="@color/primary_dark_material_dark"
            android:editable="true"
            android:textSize="20dp"
            android:layout_marginLeft="33dp"
            android:hint="Enter Email here:"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="33dp" />

        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="com.rengwuxian.materialedittext.MaterialEditText"
            android:id="@+id/txtPhone"
            android:layout_marginLeft="33dp"
            android:textColor="@color/primary_dark_material_dark"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:hint="Enter Phone Here:"
            android:layout_marginRight="33dp"
            android:editable="true" />

        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="com.rengwuxian.materialedittext.MaterialEditText"
            android:id="@+id/txtDrvPref"
            android:layout_marginLeft="33dp"
            android:textColor="@color/primary_dark_material_dark"
            android:layout_below="@+id/textView3"
            android:layout_marginRight="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:hint="Enter any additional information you would like the driver to know"
            android:editable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email:"
            android:id="@+id/textView"
            android:textColor="@color/primary_dark_material_dark"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtEmail"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Phone:"
            android:id="@+id/textView2"
            android:layout_below="@+id/txtEmail"
            android:layout_alignStart="@+id/txtEmail"
            android:textColor="@color/primary_dark_material_dark"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Driver Preferences:"
            android:id="@+id/textView3"
            android:textColor="@color/primary_dark_material_dark"
            android:layout_below="@+id/txtPhone"
            android:layout_alignStart="@+id/txtDrvPref"
            android:layout_marginTop="10dp" />

    </RelativeLayout>


</LinearLayout>