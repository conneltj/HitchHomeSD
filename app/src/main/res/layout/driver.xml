<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true">


    </include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.60">

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Final Destination City"
            android:id="@+id/driverDestination"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumRiders"
            android:layout_below="@+id/driverDestination"
            android:layout_alignStart="@+id/driverDestination"
            android:layout_alignEnd="@+id/driverDestination"
            android:hint="Number of Riders" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDepartureDate"
            android:layout_below="@+id/txtNumRiders"
            android:layout_alignEnd="@+id/txtNumRiders"
            android:layout_alignStart="@+id/txtNumRiders"
            android:hint="Departure Date" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtSetDonation"
            android:layout_below="@+id/txtDepartureDate"
            android:hint="Set Donation"
            android:layout_alignEnd="@+id/txtDepartureDate"
            android:layout_alignStart="@+id/txtDepartureDate" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New CheckBox"
            android:id="@+id/checkBox"
            android:layout_below="@+id/txtSetDonation"
            android:layout_alignStart="@+id/txtSetDonation"
            android:layout_alignEnd="@+id/txtSetDonation" />

    </RelativeLayout>

</LinearLayout>