<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fbutton="http://schemas.android.com/apk/res-auto" xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    style="@style/RelativeLayout"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/loginLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".75">

        <info.hoang8f.widget.FButton
            fbutton:buttonColor="@color/button_material_light"
            android:layout_width="185dp"
            android:layout_height="65dp"
            android:text="Login"
            android:id="@+id/btnLogin"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="visible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewLogo"
            android:background="@drawable/new_logo" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="bottom"
                android:layout_weight="1">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/txtEmailAddress"
                    android:layout_gravity="bottom"
                    android:singleLine="true"
                    android:visibility="invisible"
                    android:layout_weight=".65" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1">

        <info.hoang8f.widget.FButton
            fbutton:buttonColor="@color/button_material_light"
            android:layout_width="185dp"
            android:layout_height="65dp"
            android:text="Sign Up"
            android:id="@+id/btnSignUp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/txtPassword"
                android:layout_weight=".65"
                android:visibility="invisible" />
        </LinearLayout>

        <info.hoang8f.widget.FButton
            fbutton:buttonColor="@color/button_material_light"
            android:layout_width="185dp"
            android:layout_height="65dp"
            android:text="Skip to home"
            android:id="@+id/btnSkipShit"
            android:layout_below="@+id/btnSignUp"
            android:layout_centerHorizontal="true"
            android:visibility="visible" />

    </RelativeLayout>
</LinearLayout>