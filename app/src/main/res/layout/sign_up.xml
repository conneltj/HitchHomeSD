<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/LayoutSignUp"
    android:paddingBottom="15dp">

    <view
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        class="com.rengwuxian.materialedittext.MaterialEditText"
        android:id="@+id/txtNewEmail"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Email Address"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:hint="Email Address"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:inputType="textEmailAddress" />

    <view
        class="com.rengwuxian.materialedittext.MaterialEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtNewPassword"
        android:layout_below="@+id/txtNewEmail"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Password"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="textPassword"
        android:hint="Password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Note: Only mail.uc.edu are currently accepted"
        android:id="@+id/textView2"
        android:layout_below="@+id/txtNewPassword"
        android:layout_alignStart="@+id/txtNewPassword"
        android:paddingTop="5dp" />

</RelativeLayout>